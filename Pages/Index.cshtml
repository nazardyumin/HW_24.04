@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <h1>My first form in ASP.NET</h1>
    <form method="post">
        <input type="text" name="login" placeholder="Enter login" required />
        <input type="password" name="password" placeholder="Enter password" required />
        <input type="submit" value="Send" name="sendingData" />
    </form>
    <div class="data">
        <p>login: @ViewData["login"]</p>
        <p>password: @ViewData["password"]</p>
    </div>
</div>

